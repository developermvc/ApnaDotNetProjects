@model LumaxDMS.Models.ComplaintModel
@using LumaxDMS.AppCode
@{
    var counter = 1;
}



<div id="Complaint">
    <div class="header_ps">
        <span>COMPLAINT APPROVAL TIMELINE (TAT)</span>
    </div>
    <div class="col-sm-12 col-md-12">
        <table id="complainttbl" class=" table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline">
            <thead class="thead-lights">
                <tr>
                    <th>
                        DEPARTMENT
                    </th>
                    <th>
                        ACTION BY
                    </th>
                    <th>
                        REPORT TO
                    </th>
                    <th>
                        RECEIVED DT
                    </th>
                    <th>
                        TARGET DT
                    </th>
                    <th>
                        STATUS
                    </th>
                    <th>
                        ACTION DT
                    </th>
                    <th>
                        APRV VALUE
                    </th>
                    <th>
                        ACTION REMARK
                    </th>


                </tr>
            </thead>
            @if (Model.ApprovalHistoryList != null)
            {
            <tbody>
                @Html.Hidden("ComplaintHistCount", Model.ApprovalHistoryList.Count, new { @Name = "ComplaintHistCount" })
                @foreach (var item in Model.ApprovalHistoryList)
                {
                   
                <tr id="Complaint_1">
                    <td>
                        <span>@item.APPROVALLEVEL</span>
                    </td>
                    <td>
                        @item.APPROVALBY

                    </td>
                    <td>
                        @item.FOLLOWUPBY
                    </td>
                    <td>

                     @Html.DisplayDate(@item.ASSIGNFROMDATE)
                    </td>
                    <td>
                        @Html.DisplayDate(@item.ASSIGNTODATE)
                    </td>
                    <td>
                        @if (item.APPROVALSTATUS != null)
                        {
                            if (item.APPROVALSTATUS.Contains("APPROVED"))
                            {
                                <span>YES</span>
                            }
                            else
                            {
                                <span>NO</span>
                            }
                        }
                        else
                        {
                            <span>NO</span>
                        }
                    </td>
                    <td>
                        @if (@item.APPROVEDDATE != null)
                        {
                            @item.APPROVEDDATE.Value.ToShortDateString();
                        }

                    </td>
                    <td>@item.APPROVEDVALUE</td>
                    <td>
                        @item.APPROVALREMARKS
                    </td>

                </tr>

                }
            </tbody>
            }
        </table>

    </div>
</div>

<script type="text/javascript">
    var numrows = Number('@counter');
    var serialnumber = 1;
    var rowsarray = ["0", "0"];


   
</script>

