@model LumaxDMS.Models.ForgotPasswordModel
    @{

        ViewBag.Title = "Forgot Password";
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }

    <div class="row">
        <div class="col-md-4 form-holder">

            <!--Form with header-->
            <div class="margin-lf">
                @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @*<form action="mail.php" method="post">*@
                    <div class="card border-primary rounded-0" style="border-radius: 18px !important;">
                        <div class="card-header p-0">
                            <div class="bg-info text-white text-center py-2">
                                <h3>
                                    <i class="fa fa-user" aria-hidden="true" style="color: #555 !important;"></i> FORGET PASSWORD
                                </h3>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <!--Body-->
                            @{Html.RenderPartial("_Message", Model);}
                            <div class="form-group">
                                <div class="input-group mb-2 mb-3" style="margin-bottom:30px !important;">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-user text-info"></i>
                                        </div>
                                    </div>
                                    @Html.TextBoxFor(model => model.UserCode, new { @class = "form-control", @placeholder = "User Name", title = "Enter User Name", id = "tbemail" })
                                    @Html.ValidationMessageFor(model=>model.UserCode)
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="Submit" style="margin-bottom:30px !important; position:relative;top:12px; font-size:15px !important;" class="btn btn-info btn-block rounded-0 py-2" onclick="return checkvalidation();">
                            </div>
                            <div class="col-md-12">
                                <h6 class="text-center" style="margin-top: 17px; margin-bottom: 4px;">
                                    <a href="/Account/Login">Back to Login</a>
                                </h6>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>

    <script type="text/javascript">

        $(document).ready(function () {

        });
        $('.ace-tooltip').tooltip();

        function checkvalidation() {

            var valid = true;


            return valid;
        }




    </script>