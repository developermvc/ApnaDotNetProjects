@model LumaxDMS.Models.ResetPasswordModel



<div class="modal-dialog" role="document">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Change Password</h4>
            <button type="button" class="close" data-dismiss="modal" style="position: relative; top: -10px; color: #fff;">&times;</button>
        </div>
        <!-- Modal body -->
        @using (Html.BeginForm("ChangePassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { }))
        {

            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ReturnToken)
                @{Html.RenderPartial("_Message", Model);}

                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @style = "color:red" })
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-envelope text-info-pass"></i>
                            </div>
                        </div>
                        @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control form-controal2", @style = "font-size: 11px", @placeholder = "Current Password" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red" })
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-envelope text-info-pass"></i>
                            </div>
                        </div>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "New Password" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @style = "color:red" })
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fa fa-envelope text-info-pass"></i>
                            </div>
                        </div>
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control form-controal2", @style = "font-size: 11px", @placeholder = "Confirm New Password" })
                    </div>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <input type="button" value="Close" class="btn btn-secondary" data-dismiss="modal" />
            </div>
        }
    </div>
</div>
<script src="/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
<script type="text/javascript">
    jQuery('[data-dismiss="modal"]').on('click', function () {
        debugger;
        //jQuery('.modal-dialog').modal('hide');
        jQuery('#ChangePasswordModal').modal('show').on('hide', function () {
            $('#ChangePasswordModal').modal('hide')
        });
    });
</script>