@model LumaxDMS.Models.DSRHDRModel
@using LumaxDMS.AppCode
@{
    ViewBag.Title = "DSRApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card_ps">
    <div class="panel panel-default panel_pt">
        <div class="header_ps">
            <span>DSR APPROVAL</span>
        </div>
        <div class="container custom-datable">
            <div class="card-body">
                <div class="panel panel-default">

                    <div class="col-sm-12 col-md-12">
                        
                        <table id="Usertbl" class="table table-striped table-bordered dt-responsive nowrap" style="width: 100%">
                            <thead class="thead-lights">
                                <tr>
                                    <th style="text-align: center">S.No</th>
                                    <th style="text-align: center">Name</th>
                                    <th style="text-align: center">DSR NO</th>
                                    <th style="text-align: center">DSR Date</th>

                                    <th style="text-align: center">EMP. CODE</th>
                                    <th style="text-align: center"> HEADQUARTER</th>
                                    <th style="text-align: center">STATE NAME</th>
                                    <th style="text-align: center">ZONE NAME</th>
                                    <th style="text-align: center">PLAN APPROVE BY</th>

                                    <th style="text-align: center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.dSR_HDRMasterList != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.dSR_HDRMasterList)
                                    {
                                <tr>
                                    <td align="center">@i</td>
                                    <td align="center">@item.CREATEDBY</td>
                                    <td align="center">@item.PLANCODE</td>
                                    <td align="center">@item.PLANDATE.Value.ToString("MM/dd/yyyy") </td>

                                    <td align="center">@item.EMPCODE</td>
                                    <td align="center">@item.HEADQUATER</td>
                                    <td align="center">@item.STATENAME</td>
                                    <td align="center">@item.ZONENAME</td>
                                    <td align="center">@item.APPROVALFOR</td>



                                    <td align="center">
                                        <a class="btn btn-sm btn-secondary  pt-top" title="approve" href="/DSR/DSRApprovalDetail?planId=@item.PLANID&plandate=@item.PLANDATE&@Constants.HASH_DSR">
                                            <i class="fa fa-pencil"></i>
                                        </a>

                                    </td>

                                </tr>
                                        i++;
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4"><span style="color:red;">Records no founds</span></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="/vendor/bootstrap-datepicker/dist/js/bootstrap-datepicker.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#Usertbl').DataTable({
            responsive: true

        });
        $(".datepicker").datepicker({ orientation: "bottom auto" });
        new $.fn.dataTable.FixedHeader(table);
    });
</script>

