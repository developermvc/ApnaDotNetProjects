@model LumaxDMS.Models.BaseReportModel



<div class="col-sm-12 col-md-12">
    <table id="reporttbl" class="table table-striped table-bordered dt-responsive nowrap"
           style="width: 100%">
        @if (Model.ReportData != null && Model.ReportData.Tables.Count > 0)
        {
            <thead class="thead-lights">
                <tr>
                    @foreach (System.Data.DataColumn dc in Model.ReportData.Tables[0].Columns)
                    {
                        if (!@dc.ToString().ToUpper().Contains("EXTRA"))
                        {
                            <th align="center">
                                @dc
                            </th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow dr in Model.ReportData.Tables[0].Rows)
                {
                    <tr>
                        @foreach (System.Data.DataColumn dc in Model.ReportData.Tables[0].Columns)
                        {
                            if (!@dc.ToString().ToUpper().Contains("EXTRA"))
                            {
                                <td>
                                    @if (@dc.ToString().ToUpper() == "ACTION")
                                    {
                                        <a href="@dr[dc]" title="View Details">
                                            <i class=" icon-eye"></i>
                                        </a>
                                    }
                                    else
                                    {

                                        @dr[dc]
                                    }
                                </td>
                            }
                        }

                    </tr>
                }

            </tbody>


        }

    </table>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        $('#reporttbl').DataTable();
    });
</script>