@model LumaxDMS.Models.SchemeApplicatorModel
@using LumaxDMS.AppCode
@{
    int i = 1;
    int j = 1;
}

<div class="col-sm-12 col-md-12">
    <input type="hidden" name="DEALERID[]" id="DEALERIDARR">
    <table id="dealerTbl" class="table table-striped table-bordered dt-responsive nowrap" style="width: 100%">
        <thead class="thead-lights">
            <tr>
                <th>
                    <input name="cballParty" value="1" id="cballParty" type="checkbox" />
                    <a href="##" id="removeallParty" title="Remove Checked Rows"><i class="fa fa-trash bg_red"></i></a>
                </th>
                <th>
                    CHANNEL PARTNER Code
                </th>
                <th>
                    CHANNEL PARTNER Name
                </th>
                <th>
                   City
                </th>
                <th>
                    State
                </th>
                <th>
                    Zone
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.SchemePartyDetailList != null && Model.SchemePartyDetailList.Count() != 0)
            {
                foreach (var item in Model.SchemePartyDetailList)
                {

                    { i = i + 1; }
                    <tr id="PartyRow_@i">


                        <td>
                            <input type='checkbox' id="Partycb_@i" name="Partycb[]" />

                        </td>
                        <td>
                            @item.DEALERCODE
                            @Html.HiddenFor(m => item.DEALERID, new { @Id = "DEALER_ID" + i })
                        </td>
                        <td>
                            @item.DEALERNAME
                        </td>
                        <td>
                            @item.CITYNAME
                        </td>
                        <td>
                            @item.STATENAME
                        </td>
                        <td>
                            @item.ZONENAME
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
